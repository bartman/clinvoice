#autoload -U
#vim: set ft=zsh 

# if is no more to parse, bail now
[[ ${#argv} = 0 ]] && cli-config-help 1

# parse local parameters
while [[ -n "$1" && "${1[1]}" = "-" ]] ; do
        opt=$1 ; shift
        case "$opt" in
            -h|--list)
                cli-config-help 0
                ;;
            -l|--list)
                cli-config-list
                exit 0
                ;;
            *)
                die "unknown config option '$opt'"
                ;;
        esac
done
