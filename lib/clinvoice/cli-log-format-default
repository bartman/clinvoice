#autoload -U
#vim: set ft=zsh 
#
# this function outputs the daily itemized output

for day in ${(o)${(k)daytext}} ; do
        local time=${dayhours[$day]}

        printf "$day  (%gh)\n" $time

        local -a lines
        lines=( ${(s::Q)daytext[$day]} )
        for n in $lines ; do 
                echo "  - $n"
        done
done

