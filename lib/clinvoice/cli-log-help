#autoload -U
#vim: set ft=zsh 

local err=${1:-0}
local out=1                 # stdout
[[ "$err" -ne 0 ]] && out=2 # stderr

cli-help-print-header >&$out
cat >&$out <<END

cli log [options...] [ <date spec> ]

Options:

 -f --format=<format>   - select output format

Formats:

 full     - print everything
 default  - daily itemized output
 day      - daily summary
 month    - monthly summary
 year     - anual summary

END
exit $err
